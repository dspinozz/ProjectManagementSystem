@page "/notfound"
@inject NavigationManager Navigation

<PageTitle>Not Found - Project Management System</PageTitle>

<div class="not-found-container">
    <h1>404</h1>
    <h2>Page Not Found</h2>
    <p>Sorry, the page you're looking for doesn't exist.</p>
    <button class="btn btn-primary" @onclick="GoHome">Go to Home</button>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}

<style>
    .not-found-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
        padding: 2rem;
    }

    .not-found-container h1 {
        font-size: 6rem;
        margin: 0;
        color: #667eea;
    }

    .not-found-container h2 {
        margin: 1rem 0;
        color: #333;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        margin-top: 1rem;
    }

    .btn-primary {
        background-color: #667eea;
        color: white;
    }

    .btn-primary:hover {
        background-color: #5568d3;
    }
</style>

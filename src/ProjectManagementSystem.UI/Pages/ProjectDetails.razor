@page "/projects/{ProjectId}"
@using ProjectManagementSystem.UI.Services
@using ProjectManagementSystem.UI.Models
@using ProjectManagementSystem.UI.Components
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IProjectService ProjectService
@inject ITaskService TaskService
@inject IFileService FileService

<PageTitle>Project Details - Project Management System</PageTitle>

@if (isLoading)
{
    <div class="loading">Loading project...</div>
}
else if (project == null)
{
    <div class="error-container">
        <h2>Project Not Found</h2>
        <p>@errorMessage</p>
        <button class="btn btn-primary" @onclick="GoBack">Back to Projects</button>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">@successMessage</div>
    }
    <div class="project-details-container">
        <div class="header">
            <button class="btn btn-secondary" @onclick="GoBack">‚Üê Back to Projects</button>
            <h1>@project.Name</h1>
            <span class="status-badge status-@project.Status">@GetProjectStatusText(project.Status)</span>
        </div>

        @if (!string.IsNullOrEmpty(project.Description))
        {
            <div class="description">@project.Description</div>
        }

        <div class="project-meta">
            <div class="meta-item">
                <span class="meta-label">Created</span>
                <span class="meta-value">@project.CreatedAt.ToString("MMM dd, yyyy")</span>
            </div>
            @if (project.StartDate.HasValue)
            {
                <div class="meta-item">
                    <span class="meta-label">Start Date</span>
                    <span class="meta-value">@project.StartDate.Value.ToString("MMM dd, yyyy")</span>
                </div>
            }
            @if (project.EndDate.HasValue)
            {
                <div class="meta-item">
                    <span class="meta-label">End Date</span>
                    <span class="meta-value">@project.EndDate.Value.ToString("MMM dd, yyyy")</span>
                </div>
            }
        </div>

        <!-- Tasks Section -->
        <div class="section">
            <div class="section-header">
                <h2>üìã Tasks (@tasks.Count)</h2>
                <button class="btn btn-primary" @onclick="ShowCreateTaskModal">+ Add Task</button>
            </div>

            @if (tasks.Any())
            {
                <div class="tasks-list">
                    @foreach (var task in tasks)
                    {
                        <div class="task-item priority-@task.Priority">
                            <div class="task-header">
                                <h3>@task.Title</h3>
                                <div class="task-actions-row">
                                    <div class="task-badges">
                                        <span class="priority-badge priority-badge-@task.Priority">@GetPriorityText(task.Priority)</span>
                                        <span class="status-badge status-@task.Status">@GetStatusText(task.Status)</span>
                                    </div>
                                    <div class="task-buttons">
                                        <button class="btn-icon" title="Edit" @onclick="() => ShowEditTaskModal(task)">‚úèÔ∏è</button>
                                        <button class="btn-icon btn-danger-icon" title="Delete" @onclick="() => ShowDeleteTaskConfirm(task)">üóëÔ∏è</button>
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(task.Description))
                            {
                                <p class="task-description">@task.Description</p>
                            }
                            <div class="task-meta">
                                @if (task.DueDate.HasValue)
                                {
                                    <span class="@(task.DueDate < DateTime.Now ? "overdue" : "")">
                                        üìÖ Due: @task.DueDate.Value.ToString("MMM dd, yyyy")
                                    </span>
                                }
                                <span>Created: @task.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">No tasks yet. Create your first task!</div>
            }
        </div>

        <!-- Files Section -->
        <div class="section">
            <div class="section-header">
                <h2>üìÅ Files (@files.Count)</h2>
                <label class="btn btn-primary file-upload-btn">
                    + Upload File
                    <InputFile OnChange="@HandleFileUpload" style="display: none;" />
                </label>
            </div>

            @if (isUploading)
            {
                <div class="upload-progress">Uploading file...</div>
            }

            @if (files.Any())
            {
                <div class="files-list">
                    @foreach (var file in files)
                    {
                        <div class="file-item">
                            <div class="file-icon">@GetFileIcon(file.ContentType)</div>
                            <div class="file-info">
                                <div class="file-name">@file.FileName</div>
                                <div class="file-meta">
                                    <span>@FormatFileSize(file.FileSize)</span>
                                    <span>@file.UploadedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            <div class="file-actions">
                                <button class="btn btn-sm btn-secondary" @onclick="() => DownloadFile(file.Id, file.FileName)">Download</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteFile(file.Id)">Delete</button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">No files uploaded yet.</div>
            }
        </div>

        <!-- Team Members Section -->
        <ProjectMembers ProjectId="@ProjectId" CanManageMembers="@canManageMembers" OnMemberChanged="@HandleMemberChanged" />
    </div>
}

@if (showCreateTaskModal)
{
    <div class="modal-overlay" @onclick="CloseCreateTaskModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h2>Create New Task</h2>
            <EditForm Model="@newTask" OnValidSubmit="@HandleCreateTask">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Task Title *</label>
                    <InputText @bind-Value="newTask.Title" class="form-control" />
                    <ValidationMessage For="@(() => newTask.Title)" />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <InputTextArea @bind-Value="newTask.Description" class="form-control" rows="3" />
                </div>
                <div class="form-group">
                    <label>Priority</label>
                    <InputSelect @bind-Value="newTask.Priority" class="form-control">
                        <option value="0">Low</option>
                        <option value="1">Medium</option>
                        <option value="2">High</option>
                        <option value="3">Critical</option>
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label>Due Date</label>
                    <InputDate @bind-Value="newTask.DueDate" class="form-control" />
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCreateTaskModal">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isCreating">@(isCreating ? "Creating..." : "Create")</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@* Edit Task Modal *@
@if (showEditTaskModal && editTask != null)
{
    <div class="modal-overlay" @onclick="CloseTaskModals">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h2>Edit Task</h2>
            <EditForm Model="@editTask" OnValidSubmit="@HandleEditTask">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label>Task Title *</label>
                    <InputText @bind-Value="editTask.Title" class="form-control" />
                    <ValidationMessage For="@(() => editTask.Title)" />
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <InputTextArea @bind-Value="editTask.Description" class="form-control" rows="3" />
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <InputSelect @bind-Value="editTask.Status" class="form-control">
                        <option value="0">To Do</option>
                        <option value="1">In Progress</option>
                        <option value="2">In Review</option>
                        <option value="3">Done</option>
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label>Priority</label>
                    <InputSelect @bind-Value="editTask.Priority" class="form-control">
                        <option value="0">Low</option>
                        <option value="1">Medium</option>
                        <option value="2">High</option>
                        <option value="3">Critical</option>
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label>Due Date</label>
                    <InputDate @bind-Value="editTask.DueDate" class="form-control" />
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseTaskModals">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isCreating">@(isCreating ? "Saving..." : "Save Changes")</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@* Delete Task Confirmation *@
@if (showDeleteTaskModal && taskToDelete != null)
{
    <div class="modal-overlay" @onclick="CloseTaskModals">
        <div class="modal-content modal-small" @onclick:stopPropagation="true">
            <h2>Delete Task</h2>
            <p>Are you sure you want to delete <strong>@taskToDelete.Title</strong>?</p>
            <p class="text-danger">This action cannot be undone.</p>
            <div class="modal-actions">
                <button class="btn btn-secondary" @onclick="CloseTaskModals">Cancel</button>
                <button class="btn btn-danger" @onclick="HandleDeleteTask" disabled="@isCreating">@(isCreating ? "Deleting..." : "Delete")</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string ProjectId { get; set; } = string.Empty;
    [Inject] private IAuthService AuthService { get; set; } = null!;
    [Inject] private AuthenticationStateProvider AuthStateProvider { get; set; } = null!;
    [Inject] private NavigationManager Navigation { get; set; } = null!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;

    private ProjectDto? project;
    private List<TaskDto> tasks = new();
    private List<ProjectFileDto> files = new();
    private bool showCreateTaskModal = false;
    private bool showEditTaskModal = false;
    private bool showDeleteTaskModal = false;
    private CreateTaskRequest newTask = new();
    private UpdateTaskRequest? editTask;
    private string? editTaskId;
    private TaskDto? taskToDelete;
    private bool isCreating = false;
    private bool isUploading = false;
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading = true;
    private bool canManageMembers = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProject();
        await LoadTasks();
        await LoadFiles();
        await CheckMemberPermissions();
        isLoading = false;
    }

    private async Task CheckMemberPermissions()
    {
        try
        {
            var user = await AuthService.GetUserAsync();
            if (user != null && project != null)
            {
                // Check if user is admin or project manager (system role)
                var role = await AuthService.GetUserRoleAsync();
                
                // Check system role first - most permissive
                if (role == "Admin" || role == "ProjectManager")
                {
                    canManageMembers = true;
                    return;
                }
                
                // Check if user is a project member with ProjectManager role
                if (project.Members != null && project.Members.Any())
                {
                    var userMember = project.Members.FirstOrDefault(m => m.UserId == user.Id);
                    if (userMember != null)
                    {
                        // Role 0 = ProjectManager, check both Role enum and RoleName string
                        canManageMembers = userMember.Role == 0 || 
                                         (userMember.RoleName != null && 
                                          (userMember.RoleName.Equals("ProjectManager", StringComparison.OrdinalIgnoreCase) ||
                                           userMember.RoleName.Equals("Project Manager", StringComparison.OrdinalIgnoreCase)));
                    }
                }
                
                // If user created the project, they should be able to manage (fallback)
                // This ensures project creators can always manage members
                if (!canManageMembers && project.CreatedBy == user.Id)
                {
                    canManageMembers = true;
                }
            }
        }
        catch (Exception ex)
        {
            // Log error but don't fail - allow viewing at least
            Console.WriteLine($"Error checking member permissions: {ex.Message}");
            canManageMembers = false;
        }
    }

    private async Task HandleMemberChanged()
    {
        await LoadProject(); // Reload project to get updated members list
    }

    private async Task LoadProject()
    {
        errorMessage = null;
        try
        {
            project = await ProjectService.GetProjectByIdAsync(ProjectId);
            if (project == null)
            {
                errorMessage = "Project not found.";
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            await HandleUnauthorized();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load project: {ex.Message}";
        }
    }

    private async Task LoadTasks()
    {
        try
        {
            tasks = await TaskService.GetTasksByProjectAsync(ProjectId);
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            await HandleUnauthorized();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load tasks: {ex.Message}";
        }
    }

    private async Task LoadFiles()
    {
        try
        {
            files = await FileService.GetProjectFilesAsync(ProjectId);
        }
        catch (Exception)
        {
            // Files endpoint might not exist - silently fail
            files = new();
        }
    }

    private async Task HandleUnauthorized()
    {
        await AuthService.LogoutAsync();
        if (AuthStateProvider is CustomAuthenticationStateProvider customProvider)
        {
            customProvider.NotifyUserLogout();
        }
        Navigation.NavigateTo("/login");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/projects");
    }

    private void ShowCreateTaskModal()
    {
        newTask = new CreateTaskRequest
        {
            ProjectId = ProjectId,
            Status = 0,
            Priority = 1
        };
        showCreateTaskModal = true;
    }

    private void CloseCreateTaskModal()
    {
        showCreateTaskModal = false;
    }

    private async Task HandleCreateTask()
    {
        isCreating = true;
        errorMessage = null;
        try
        {
            var success = await TaskService.CreateTaskAsync(newTask);
            if (success)
            {
                successMessage = "Task created successfully!";
                await LoadTasks();
                CloseCreateTaskModal();
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            await HandleUnauthorized();
        }
        catch (ArgumentException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to create task: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    // Edit Task
    private void ShowEditTaskModal(TaskDto task)
    {
        editTaskId = task.Id;
        editTask = new UpdateTaskRequest
        {
            Title = task.Title,
            Description = task.Description,
            Status = task.Status,
            Priority = task.Priority,
            DueDate = task.DueDate
        };
        showEditTaskModal = true;
    }

    private async Task HandleEditTask()
    {
        if (editTask == null || editTaskId == null) return;
        
        isCreating = true;
        errorMessage = null;
        try
        {
            var success = await TaskService.UpdateTaskAsync(editTaskId, editTask);
            if (success)
            {
                successMessage = "Task updated successfully!";
                await LoadTasks();
                CloseTaskModals();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update task: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    // Delete Task
    private void ShowDeleteTaskConfirm(TaskDto task)
    {
        taskToDelete = task;
        showDeleteTaskModal = true;
    }

    private async Task HandleDeleteTask()
    {
        if (taskToDelete == null) return;
        
        isCreating = true;
        errorMessage = null;
        try
        {
            var success = await TaskService.DeleteTaskAsync(taskToDelete.Id);
            if (success)
            {
                successMessage = "Task deleted.";
                await LoadTasks();
                CloseTaskModals();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete task: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private void CloseTaskModals()
    {
        showEditTaskModal = false;
        showDeleteTaskModal = false;
        editTask = null;
        taskToDelete = null;
    }

    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        isUploading = true;
        errorMessage = null;
        successMessage = null;
        try
        {
            var file = e.File;
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB max
            var success = await FileService.UploadFileAsync(ProjectId, stream, file.Name, file.ContentType);
            if (success)
            {
                successMessage = "File uploaded successfully!";
                await LoadFiles();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to upload file: {ex.Message}";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task DownloadFile(string fileId, string fileName)
    {
        try
        {
            var stream = await FileService.DownloadFileAsync(fileId);
            if (stream != null)
            {
                // Use JS interop to trigger download
                using var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);
                var bytes = memoryStream.ToArray();
                var base64 = Convert.ToBase64String(bytes);
                await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to download file: {ex.Message}";
        }
    }

    private async Task DeleteFile(string fileId)
    {
        try
        {
            var success = await FileService.DeleteFileAsync(fileId);
            if (success)
            {
                successMessage = "File deleted.";
                await LoadFiles();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete file: {ex.Message}";
        }
    }

    private string GetProjectStatusText(int status) => status switch
    {
        0 => "Planning",
        1 => "In Progress",
        2 => "On Hold",
        3 => "Completed",
        4 => "Cancelled",
        _ => "Unknown"
    };

    private string GetStatusText(int status) => status switch
    {
        0 => "To Do",
        1 => "In Progress",
        2 => "In Review",
        3 => "Done",
        _ => "Unknown"
    };

    private string GetPriorityText(int priority) => priority switch
    {
        0 => "Low",
        1 => "Medium",
        2 => "High",
        3 => "Critical",
        _ => "Unknown"
    };

    private string GetFileIcon(string contentType) => contentType switch
    {
        var t when t.StartsWith("image/") => "üñºÔ∏è",
        var t when t.StartsWith("video/") => "üé¨",
        var t when t.Contains("pdf") => "üìÑ",
        var t when t.Contains("word") || t.Contains("document") => "üìù",
        var t when t.Contains("excel") || t.Contains("spreadsheet") => "üìä",
        var t when t.Contains("zip") || t.Contains("archive") => "üì¶",
        _ => "üìé"
    };

    private string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }
}


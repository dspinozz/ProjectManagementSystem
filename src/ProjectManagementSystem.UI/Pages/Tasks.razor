                        <div class="detail-value @(selectedTask.DueDate < DateTime.Now ? "overdue" : "")">
                            @selectedTask.DueDate.Value.ToString("MMMM dd, yyyy")
                            @if (selectedTask.DueDate < DateTime.Now)
                            {
                                <span class="overdue-indicator">‚ö†Ô∏è Overdue</span>
                            }
                        </div>
                    </div>
                }

                <div class="task-detail-section">
                    <label class="detail-label">Created</label>
                    <div class="detail-value">@selectedTask.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</div>
                </div>

                @if (selectedTask.UpdatedAt.HasValue)
                {
                    <div class="task-detail-section">
                        <label class="detail-label">Last Updated</label>
                        <div class="detail-value">@selectedTask.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</div>
                    </div>
                }

                <div class="task-actions">
                    <h3>Change Status</h3>
                    <div class="status-buttons">
                        @if (selectedTask.Status > 0)
                        {
                            <button class="btn btn-secondary" @onclick="@(() => ChangeTaskStatus(selectedTask.Status - 1))" disabled="@isUpdatingStatus">
                                @if (isUpdatingStatus)
                                {
                                    <span>‚è≥ Updating...</span>
                                }
                                else
                                {
                                    <span>‚Üê @GetStatusName(selectedTask.Status - 1)</span>
                                }
                            </button>
                        }
                        @if (selectedTask.Status < 3)
                        {
                            <button class="btn btn-primary" @onclick="@(() => ChangeTaskStatus(selectedTask.Status + 1))" disabled="@isUpdatingStatus">
                                @if (isUpdatingStatus)
                                {
                                    <span>‚è≥ Updating...</span>
                                }
                                else
                                {
                                    <span>@GetStatusName(selectedTask.Status + 1) ‚Üí</span>
                                }
                            </button>
                        }
                        @if (selectedTask.Status == 0)
                        {
                            <span class="status-hint">Start by moving to "In Progress"</span>
                        }
                        @if (selectedTask.Status == 3)
                        {
                            <span class="status-hint">Task is complete!</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private ITaskService TaskService { get; set; } = null!;
    [Inject] private IJSRuntime JSRuntime { get; set; } = null!;

    private List<TaskDto> tasks = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string statusFilter = "";
    private string priorityFilter = "";
    
    // Drag and drop state
    private string? draggedTaskId = null;
    private int? dragOverStatus = null;
    private bool isUpdatingStatus = false;
    
    // Task details modal
    private bool showTaskDetailsModal = false;
    private TaskDto? selectedTask = null;
    private string? successMessage = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Add keyboard event listener for ESC key
            await JSRuntime.InvokeVoidAsync("eval", @"
                window.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') {
                        window.dispatchEvent(new CustomEvent('closeTaskModal'));
                    }
                });
            ");
        }
    }


    private async Task LoadTasks()
    {
        isLoading = true;
        try
        {
            tasks = await TaskService.GetTasksAsync(null);
            
            if (!string.IsNullOrEmpty(statusFilter) && int.TryParse(statusFilter, out var status))
            {
                tasks = tasks.Where(t => t.Status == status).ToList();
            }
            if (!string.IsNullOrEmpty(priorityFilter) && int.TryParse(priorityFilter, out var priority))
            {
                tasks = tasks.Where(t => t.Priority == priority).ToList();
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusName(int status) => status switch
    {
        0 => "To Do",
        1 => "In Progress",
        2 => "In Review",
        3 => "Done",
        _ => "Unknown"
    };

    private string GetStatusClass(int status) => status switch
    {
        0 => "status-todo",
        1 => "status-progress",
        2 => "status-review",
        3 => "status-done",
        _ => ""
    };

    private string GetPriorityName(int priority) => priority switch
    {
        0 => "Low",
        1 => "Medium",
        2 => "High",
        3 => "Critical",
        _ => "Normal"
    };

    private string GetPriorityClass(int priority) => priority switch
    {
        0 => "priority-low",
        1 => "priority-medium",
        2 => "priority-high",
        3 => "priority-critical",
        _ => ""
    };

    private string TruncateText(string text, int max) =>
        string.IsNullOrEmpty(text) || text.Length <= max ? text : text.Substring(0, max) + "...";

    // Drag and Drop Handlers
    private void HandleDragStart(DragEventArgs e, TaskDto task)
    {
        draggedTaskId = task.Id;
        // Prevent text selection during drag
        try
        {
            e.DataTransfer.EffectAllowed = "move";
        }
        catch
        {
            // Some browsers may not support this
        }
        StateHasChanged();
    }

    private void HandleDragEnd(DragEventArgs e)
    {
        draggedTaskId = null;
        dragOverStatus = null;
        StateHasChanged();
    }

    private void HandleDragOver(DragEventArgs e, int status)
    {
        if (!string.IsNullOrEmpty(draggedTaskId))
        {
            dragOverStatus = status;
            StateHasChanged();
        }
    }

    private void HandleDragEnter(DragEventArgs e, int status)
    {
        if (!string.IsNullOrEmpty(draggedTaskId))
        {
            dragOverStatus = status;
            StateHasChanged();
        }
    }

    private void HandleDragLeave(DragEventArgs e, int status)
    {
        // Clear drag over status when leaving the column
        if (dragOverStatus == status)
        {
            dragOverStatus = null;
            StateHasChanged();
        }
    }

    private async Task HandleDrop(DragEventArgs e, int newStatus)
    {
        if (string.IsNullOrEmpty(draggedTaskId))
        {
            return;
        }

        var task = tasks.FirstOrDefault(t => t.Id == draggedTaskId);
        if (task == null || task.Status == newStatus)
        {
            draggedTaskId = null;
            dragOverStatus = null;
            StateHasChanged();
            return;
        }

        // Update task status
        isUpdatingStatus = true;
        try
        {
            var updateRequest = new UpdateTaskRequest
            {
                Title = task.Title,
                Description = task.Description,
                Status = newStatus,
                Priority = task.Priority,
                AssignedToId = task.AssignedToId,
                DueDate = task.DueDate
            };

            var success = await TaskService.UpdateTaskAsync(task.Id, updateRequest);
            if (success)
            {
                // Reload tasks to reflect the change
                await LoadTasks();
                // Clear any previous error messages
                errorMessage = null;
            }
            else
            {
                errorMessage = "Failed to update task status. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating task: {ex.Message}";
        }
        finally
        {
            isUpdatingStatus = false;
            draggedTaskId = null;
            dragOverStatus = null;
            StateHasChanged();
        }
    }

    private string GetDropZoneClass(int status)
    {
        if (dragOverStatus == status && !string.IsNullOrEmpty(draggedTaskId))
        {
            return "drop-zone-active";
        }
        return "drop-zone";
    }

    // Task Details Modal Handlers
    private void ShowTaskDetails(TaskDto task)
    {
        // Don't open modal if we're currently dragging
        if (!string.IsNullOrEmpty(draggedTaskId))
        {
            return;
        }
        
        selectedTask = task;
        showTaskDetailsModal = true;
        errorMessage = null;
        successMessage = null;
    }

    private void CloseTaskDetails()
    {
        showTaskDetailsModal = false;
        selectedTask = null;
        errorMessage = null;
        successMessage = null;
    }

    private async Task ChangeTaskStatus(int newStatus)
    {
        if (selectedTask == null || selectedTask.Status == newStatus || isUpdatingStatus)
        {
            return;
        }

        // Validate status range
        if (newStatus < 0 || newStatus > 3)
        {
            errorMessage = "Invalid status value";
            return;
        }

        isUpdatingStatus = true;
        errorMessage = null;
        successMessage = null;
        
        try
        {
            var updateRequest = new UpdateTaskRequest
            {
                Title = selectedTask.Title,
                Description = selectedTask.Description,
                Status = newStatus,
                Priority = selectedTask.Priority,
                AssignedToId = selectedTask.AssignedToId,
                DueDate = selectedTask.DueDate
            };

            var success = await TaskService.UpdateTaskAsync(selectedTask.Id, updateRequest);
            if (success)
            {
                // Show success message
                successMessage = $"Task moved to '{GetStatusName(newStatus)}'";
                
                // Update the selected task's status
                selectedTask.Status = newStatus;
                
                // Reload tasks to reflect the change
                await LoadTasks();
                
                // Update selectedTask reference to match the reloaded task
                var updatedTask = tasks.FirstOrDefault(t => t.Id == selectedTask.Id);
                if (updatedTask != null)
                {
                    selectedTask = updatedTask;
                }
                
                // Clear success message after 2 seconds
                _ = Task.Delay(2000).ContinueWith(_ => InvokeAsync(() =>
                {
                    successMessage = null;
                    StateHasChanged();
                }));
            }
            else
            {
                errorMessage = "Failed to update task status. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating task: {ex.Message}";
        }
        finally
        {
            isUpdatingStatus = false;
            StateHasChanged();
        }
    }
}


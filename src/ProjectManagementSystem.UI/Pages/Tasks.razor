@page "/tasks"
@using ProjectManagementSystem.UI.Services
@using ProjectManagementSystem.UI.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@attribute [Authorize]

<PageTitle>Tasks - Project Management System</PageTitle>

<div class="tasks-page">
    <div class="tasks-header">
        <div>
            <h1>Task Board</h1>
            <p class="subtitle">View and manage all tasks across projects</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">‚ö†Ô∏è @errorMessage</div>
    }

    <div class="filters-bar">
        <div class="filter-group">
            <label>Status</label>
            <select @bind="statusFilter" @bind:after="LoadTasks" class="filter-select">
                <option value="">All Statuses</option>
                <option value="0">To Do</option>
                <option value="1">In Progress</option>
                <option value="2">In Review</option>
                <option value="3">Done</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Priority</label>
            <select @bind="priorityFilter" @bind:after="LoadTasks" class="filter-select">
                <option value="">All Priorities</option>
                <option value="0">Low</option>
                <option value="1">Medium</option>
                <option value="2">High</option>
                <option value="3">Critical</option>
            </select>
        </div>
        <div class="filter-stats">
            <span class="stat-item">@tasks.Count total tasks</span>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading tasks...</p>
        </div>
    }
    else if (tasks.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">üìã</div>
            <h3>No tasks found</h3>
            <p>Tasks will appear here when you create them from within projects.</p>
            <a href="/projects" class="btn btn-primary">Browse Projects</a>
        </div>
    }
    else
    {
        <div class="kanban-board">
            @foreach (var status in new[] { 0, 1, 2, 3 })
            {
                var columnTasks = tasks.Where(t => t.Status == status).ToList();
                <div class="kanban-column">
                    <div class="column-header @GetStatusClass(status)">
                        <div class="header-left">
                            <span class="status-dot"></span>
                            <span class="status-name">@GetStatusName(status)</span>
                        </div>
                        <span class="task-count">@columnTasks.Count</span>
                    </div>
                    <div class="column-body @GetDropZoneClass(status)" 
                         @ondrop="@((DragEventArgs e) => HandleDrop(e, status))"
                         @ondragover="@((DragEventArgs e) => HandleDragOver(e, status))"
                         @ondragover:preventDefault="true"
                         @ondragenter="@((DragEventArgs e) => HandleDragEnter(e, status))"
                         @ondragleave="@((DragEventArgs e) => HandleDragLeave(e, status))">
                        @if (columnTasks.Any())
                        {
                            @foreach (var task in columnTasks)
                            {
                                <div class="task-card @GetPriorityClass(task.Priority) @(draggedTaskId == task.Id ? "dragging" : "")"
                                     draggable="true"
                                     @ondragstart="@((DragEventArgs e) => HandleDragStart(e, task))"
                                     @ondragend="@((DragEventArgs e) => HandleDragEnd(e))"
                                     @onmousedown="@((MouseEventArgs e) => { if (e.Button == 0) { /* Prevent text selection on drag start */ } })"
                                     @onclick="@(() => { if (string.IsNullOrEmpty(draggedTaskId)) ShowTaskDetails(task); })"
                                     style="cursor: grab; -webkit-user-select: none; user-select: none;">
                                    <div class="card-top">
                                        <span class="priority-indicator @GetPriorityClass(task.Priority)">@GetPriorityName(task.Priority)</span>
                                        @if (task.DueDate.HasValue)
                                        {
                                            <span class="due-badge @(task.DueDate < DateTime.Now ? "overdue" : "")">
                                                @task.DueDate.Value.ToString("MMM dd")
                                            </span>
                                        }
                                    </div>
                                    <h4 class="task-title">@task.Title</h4>
                                    @if (!string.IsNullOrEmpty(task.Description))
                                    {
                                        <p class="task-desc">@TruncateText(task.Description, 80)</p>
                                    }
                                    <div class="card-footer">
                                        <span class="created-date">Created @task.CreatedAt.ToString("MMM dd")</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="column-empty @(dragOverStatus == status && !string.IsNullOrEmpty(draggedTaskId) ? "drag-over" : "")">
                                <span>@(dragOverStatus == status && !string.IsNullOrEmpty(draggedTaskId) ? "Drop here" : "No tasks")</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>


@page "/"
@using Microsoft.AspNetCore.Authorization
@using ProjectManagementSystem.UI.Services
@using ProjectManagementSystem.UI.Models
@attribute [Authorize]
@inject IProjectService ProjectService
@inject ITaskService TaskService
@inject IWorkspaceService WorkspaceService
@inject NavigationManager Navigation

<PageTitle>Dashboard - Project Management System</PageTitle>

<div class="dashboard">
    <div class="dashboard-header">
        <div>
            <h1>Dashboard</h1>
            <p class="subtitle">Welcome back! Here's your overview.</p>
        </div>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/projects")'>
            <span>+</span> New Project
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Loading dashboard...</p>
        </div>
    }
    else
    {
        <div class="stats-grid">
            <div class="stat-card" @onclick='() => Navigation.NavigateTo("/projects")'>
                <div class="stat-icon projects">üìÅ</div>
                <div class="stat-content">
                    <span class="stat-value">@projectCount</span>
                    <span class="stat-label">Total Projects</span>
                </div>
            </div>
            <div class="stat-card" @onclick='() => Navigation.NavigateTo("/tasks")'>
                <div class="stat-icon tasks">‚úì</div>
                <div class="stat-content">
                    <span class="stat-value">@taskCount</span>
                    <span class="stat-label">Total Tasks</span>
                </div>
            </div>
            <div class="stat-card" @onclick='() => Navigation.NavigateTo("/workspaces")'>
                <div class="stat-icon workspaces">üíº</div>
                <div class="stat-content">
                    <span class="stat-value">@workspaceCount</span>
                    <span class="stat-label">Workspaces</span>
                </div>
            </div>
            <div class="stat-card highlight">
                <div class="stat-icon active">üöÄ</div>
                <div class="stat-content">
                    <span class="stat-value">@activeProjectCount</span>
                    <span class="stat-label">Active Projects</span>
                </div>
            </div>
        </div>

        <div class="dashboard-sections">
            <section class="recent-section">
                <div class="section-header">
                    <h2>Recent Projects</h2>
                    <a href="/projects" class="view-all">View all ‚Üí</a>
                </div>
                @if (recentProjects.Any())
                {
                    <div class="recent-list">
                        @foreach (var project in recentProjects)
                        {
                            <div class="recent-item" @onclick='() => Navigation.NavigateTo($"/projects/{project.Id}")'>
                                <div class="item-main">
                                    <span class="item-name">@project.Name</span>
                                    <span class="item-date">@project.CreatedAt.ToString("MMM dd")</span>
                                </div>
                                <span class="item-status status-@project.Status">@GetStatusText(project.Status)</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-section">
                        <p>No projects yet. <a href="/projects">Create your first project</a></p>
                    </div>
                }
            </section>

            <section class="recent-section">
                <div class="section-header">
                    <h2>Recent Tasks</h2>
                    <a href="/tasks" class="view-all">View all ‚Üí</a>
                </div>
                @if (recentTasks.Any())
                {
                    <div class="recent-list">
                        @foreach (var task in recentTasks)
                        {
                            <div class="recent-item">
                                <div class="item-main">
                                    <span class="item-name">@task.Title</span>
                                    @if (task.DueDate.HasValue)
                                    {
                                        <span class="item-date">Due: @task.DueDate.Value.ToString("MMM dd")</span>
                                    }
                                </div>
                                <span class="item-priority priority-@task.Priority">@GetPriorityText(task.Priority)</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-section">
                        <p>No tasks yet. Create a project first to add tasks.</p>
                    </div>
                }
            </section>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private int projectCount = 0;
    private int taskCount = 0;
    private int workspaceCount = 0;
    private int activeProjectCount = 0;
    private List<ProjectDto> recentProjects = new();
    private List<TaskDto> recentTasks = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        isLoading = true;
        try
        {
            var projectsTask = ProjectService.GetProjectsAsync();
            var tasksTask = TaskService.GetTasksAsync(null);
            var workspacesTask = WorkspaceService.GetWorkspacesAsync();

            await Task.WhenAll(projectsTask, tasksTask, workspacesTask);

            var projects = await projectsTask;
            var tasks = await tasksTask;
            var workspaces = await workspacesTask;

            projectCount = projects.Count;
            taskCount = tasks.Count;
            workspaceCount = workspaces.Count;
            activeProjectCount = projects.Count(p => p.Status == 1);

            recentProjects = projects.OrderByDescending(p => p.CreatedAt).Take(5).ToList();
            recentTasks = tasks.OrderByDescending(t => t.CreatedAt).Take(5).ToList();
        }
        catch
        {
            // Silently handle errors for dashboard
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusText(int status) => status switch
    {
        0 => "Planning", 1 => "Active", 2 => "On Hold", 3 => "Complete", 4 => "Cancelled", _ => "Unknown"
    };

    private string GetPriorityText(int priority) => priority switch
    {
        0 => "Low", 1 => "Medium", 2 => "High", 3 => "Critical", _ => "Normal"
    };
}


@using ProjectManagementSystem.UI.Components

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            @{
                var pageType = routeData.PageType;
                var isLoginPage = pageType != null && pageType.Name == "Login";
            }
            @if (isLoginPage)
            {
                @* Login page - no authorization, use EmptyLayout *@
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(EmptyLayout)" />
            }
            else
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        @if (context.User.Identity?.IsAuthenticated != true)
                        {
                            <RedirectToLogin />
                        }
                        else
                        {
                            <div class="unauthorized-container">
                                <h2>Access Denied</h2>
                                <p role="alert">You are not authorized to access this resource.</p>
                            </div>
                        }
                    </NotAuthorized>
                </AuthorizeRouteView>
            }
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="not-found-container">
                    <h2>Page Not Found</h2>
                    <p role="alert">Sorry, there's nothing at this address.</p>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>


<style>
    .unauthorized-container, .not-found-container {
        padding: 2rem;
        text-align: center;
    }
</style>
